<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_nuevacpms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistraracpmsActivity">


    <LinearLayout
        android:layout_width="326dp"
        android:layout_height="305dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_selefoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_menu_camera" />

            <ImageView
                android:id="@+id/img_foto"
                android:layout_width="57dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/StipoAcpm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/tipoAcpms" />


        </LinearLayout>

        <EditText
            android:id="@+id/editTextDescripcion"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Describa brevemente la Situacion Inicial"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btn_subirfoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#009688"
            android:text="Registrar"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txtRR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>